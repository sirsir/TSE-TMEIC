@CHARSET "UTF-8";

* {
  font-size: 13px;
  font-family: Avenir, 'Helvetica neue', Helvetica, '游ゴシック', YuGothic, 'ヒラギノ角ゴ Pro W3', 'Hiragino Kaku Gothic Pro', メイリオ, Meiryo, 'ＭＳ Ｐゴシック', sans-serif;
}

body {
  background-color: #BDD7EE;
}

table.ordinaryTable {
  border: solid 2px #A3A3A3;
  border-collapse: collapse;
}

table.ordinaryTable td {
  border: solid 2px #A3A3A3;
  padding: 2px;
}

.tableStyle {
  display: table;
}

.tableStyle>div {
  display: table-row;
}

.tableStyle>div>div {
  display: table-cell;
}

.events_disabled {
  pointer-events: none;
}

.events_disabled>* {
  color: #9FA0A0 !important;
}

button:disabled>* {
  color: #9FA0A0 !important;
}

/* jqgird */
table[aria-labelledby^="gbox_"] th {
  background: #2E75B6 !important;
  color: #FFFFFF !important;
  border-color: #AAAAAA !important;
}

.ui-row-even {
  background: #CED6EA;
}

div[id^="gview_"] input[type="button"] {
  font-size: 13px !important;
  width: 100%;
  height: 23px;
  margin: 0 auto;
}

div[id^="gview_"] input[type="radio"] {
  width: 100%;
}

div[id^="gview_"] input[type="checkbox"] {
  width: 100%;
}

div[id^="gview_"] input[type="text"] {
  font-size: 13px !important;
  width: 100%;
  height: 14px;
  margin: 0 auto;
  margin-left: -2px;
}

div[id^="gview_"] select {
  font-size: 13px !important;
  width: 104% !important;
  margin-left: -2px;
}

div[id^="gview_"] div:nth-of-type(2) {
  background: #2E75B6 !important;
  color: #FFFFFF !important;
}

td[aria-describedby$="_crud"][title="C"] ~ td {
  color: #FF0000;
}

td[aria-describedby$="_crud"][title="C"] ~ td * {
  color: #FF0000;
}

td[aria-describedby$="_crud"][title="U"] ~ td {
  color: #FF0000;
}

td[aria-describedby$="_crud"][title="U"] ~ td * {
  color: #FF0000;
}